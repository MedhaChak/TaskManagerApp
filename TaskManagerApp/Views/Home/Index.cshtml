@{
    ViewData["Title"] = "Home Page";
}
@model List<TaskManagerApp.Models.TaskModel>
<div class="container mt-4">

    
    <p class="lead">Manage your daily tasks efficiently.</p>

    
    <a class="btn btn-pink mb-4" href="/Task/Create">+ Create New Task</a>

    
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Task List</h5>
            <p>This table will show your tasks after we build the database.</p>

            <table class="table table-bordered table-striped mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Priority</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any()){
                    @foreach(var task in Model){
                        <tr>
                            <td>@task.Id</td>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@(task.DueDate?.ToShortDateString() ?? "-")</td>
                            <td>@(task.IsComplete ? "Completed" : "Pending")</td>
                            <td>@task.Priority</td>
                            <td>
                                <a class="btn btn-pink btn-sm btn-info task-btn mb-1" href="/Task/Details/@task.Id">Details</a>
                                <a class="btn btn-sm btn-warning task-btn mb-1" href="/Task/Edit/@task.Id">Edit</a>

                                <form asp-controller="Task"asp-action="ToggleComplete" asp-route-id="@task.Id" method="post" class="d-inline">

                                    <button class="btn btn-sm btn-orange task-btn mb-1">
                                        @(task.IsComplete ? "Undo" : "Done")
                                    </button>
                                </form>
                                <form asp-controller="Task" asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-danger task-btn mb-1" onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                }
            }
            else{
                <tr>
                <td colspan="7" class="text-center text-muted">
                                No tasks yet — create one!
                            </td>
                </tr>
            }
        </tbody>
        </table>
        </div>
    </div>

</div>